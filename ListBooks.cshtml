    <form asp-page="./ListBooks" method="get" align="center">
        <p>
            Search Book with Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
            <a asp-page="Create">Add New Book</a>
        </p>
      
        
    </form>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 row" style="padding-bottom: 15px;margin-bottom: 15px;">
                @foreach (var item in Model.Books)
                {

                    <div class="col-lg-3 col-md-3 col-sm-12">

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <img src="@Url.Content("~/Images/Books/"+ System.IO.Path.GetFileName(item.BookCover))" alt="Cinque Terre" class="img-responsive" style="width: 100%;">

                            <div>
                                <p> @Html.DisplayFor(modelItem => item.BookTitle)</p>
                                <p> @Html.DisplayFor(modelItem => item.BookAuthor)</p>
                                <p> @Html.DisplayFor(modelItem => item.BookDescription)</p>
                                <p> @Html.DisplayFor(modelItem => item.ReadingStatus)</p>
                                <a asp-page="./Details" asp-route-id="@item.BookId">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
  